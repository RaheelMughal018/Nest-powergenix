# Application
NODE_ENV=development
PORT=3333
APP_NAME="Auth Course API"
APP_URL=http://localhost:3333

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/auth_course?schema=public"

# JWT
JWT_SECRET=dev-jwt-secret-key-please-change-in-production-12345
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev-refresh-secret-key-please-change-in-production-12345
JWT_REFRESH_EXPIRES_IN=30d

# Security
BCRYPT_SALT_ROUNDS=10

# Swagger
SWAGGER_TITLE="Auth Course API"
SWAGGER_DESCRIPTION="Authentication API Documentation"
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs
